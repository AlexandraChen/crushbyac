<div class="col-sm-12"> <!-- style="display: none"> -->
  <div style="display: none">
  <%= form_for @custom_bikini do |f| %>
    <%= f.label "Top design" %>
    <%= f.text_field :top_design, class: "form-control", id: "top-design-picked", placeholder: :top_design%>
    <%= f.label "Bottom design" %>
    <%= f.text_field :bottom_design, class: "form-control", id: "bottom-design-picked", placeholder: :bottom_design%>
    <%= f.label "Neck ties" %>
    <%= f.text_field :top_neck_tie_fill, class: "form-control", id: "top-neck-tie-fill-picked", placeholder: :top_neck_tie_fill%>
    <%= f.label "Top Main fill" %>
    <%= f.text_field :top_main_fill, class: "form-control", id: "top-main-fill-picked", placeholder: :top_main_fill%>
    <%= f.label "Top Ruffles" %>
    <%= f.text_field :top_ruffles_fill, class: "form-control", id:"top-ruffles-fill-picked", placeholder: :top_ruffles_fill%>
    <%= f.label "Top back ties" %>
    <%= f.text_field :top_back_tie_fill, class: "form-control", id: "top-back-tie-fill-picked", placeholder: :top_back_tie_fill%>
    <%= f.label "Bottom main fill" %>
    <%= f.text_field :bottom_main_fill, class: "form-control", id: "bottom-main-fill-picked", placeholder: :bottom_main_fill%>
    <%= f.label "Bottom laterals" %>
    <%= f.text_field :bottom_lateral_fill, class: "form-control", id: "bottom-lateral-fill-picked", placeholder: :bottom_lateral_fill%>
    </div>
    <br>
    <%= f.submit "Crear bikini personalizado", class: "btn btn-default col-sm-12 create-custom-bikini", id: "interested-product"%>
  <% end %>
</div>


