<div class="col-sm-12 custom-bikini-form"> <!-- style="display: none"> -->

<%= form_for @order do |f| %>
  <%= f.label "Nombre"%>
    <%= f.text_field :name, class: "form-control", id: "top-back-tie-fill-picked", placeholder: "Nombre"%>
    <%= f.label "Email" %>
    <%= f.text_field :email, class: "form-control", id: "bottom-main-fill-picked", placeholder: :email %>
    <%= f.label "Celular" %>
    <%= f.text_field :cellphone, class: "form-control", id: "bottom-lateral-fill-picked", placeholder: "Número de celular" %>
    <%= f.label "Dirección de entrega" %>
    <%= f.text_field :cellphone, class: "form-control", id: "bottom-lateral-fill-picked", placeholder: "Dirección de entrega o buscar en showroom" %>

  <%= f.fields_for :custom_bikini do |ff| %>
    <%= ff.label "Height" %>
    <%= ff.number_field :height, class: "form-control", id: "height-picked", placeholder: :height%>
    <%= ff.label "Bust" %>
    <%= ff.text_field :bust, class: "form-control", id: "bust-picked", placeholder: :bust%>
    <%= ff.label "Waist" %>
    <%= ff.number_field :waist, class: "form-control", id: "waist-picked", placeholder: :waist%>
    <%= ff.label "Hips" %>
    <%= ff.number_field :hips, class: "form-control", id: "hips-picked", placeholder: :hips%>
    <%= ff.label "Top design" %>
    <%= ff.text_field :top_design, class: "form-control", id: "top-design-picked", placeholder: :top_design%>
    <%= ff.label "Bottom design" %>
    <%= ff.text_field :bottom_design, class: "form-control", id: "bottom-design-picked", placeholder: :bottom_design%>
    <%= ff.label "Neck ties" %>
    <%= ff.text_field :top_neck_tie_fill, class: "form-control", id: "top-neck-tie-fill-picked", placeholder: :top_neck_tie_fill%>
    <%= ff.label "Top Main fill" %>
    <%= ff.text_field :top_main_fill, class: "form-control", id: "top-main-fill-picked", placeholder: :top_main_fill%>
    <%= ff.label "Top Ruffles" %>
    <%= ff.text_field :top_ruffles_fill, class: "form-control", id:"top-ruffles-fill-picked", placeholder: :top_ruffles_fill%>
    <%= ff.label "Top back ties" %>
    <%= ff.text_field :top_back_tie_fill, class: "form-control", id: "top-back-tie-fill-picked", placeholder: :top_back_tie_fill%>
    <%= ff.label "Bottom main fill" %>
    <%= ff.text_field :bottom_main_fill, class: "form-control", id: "bottom-main-fill-picked", placeholder: :bottom_main_fill%>
    <%= ff.label "Bottom laterals" %>
    <%= ff.text_field :bottom_lateral_fill, class: "form-control", id: "bottom-lateral-fill-picked", placeholder: :bottom_lateral_fill%>
  <% end %> 
    <%= f.button :submit %>

<% end %>


