<div class="container spacer">
  <div class="row">
    <h1> Admin panel </h1>
    <p><%= link_to t("log_out"), '/logout' %></p>
    <p><%= link_to t("add_product"), new_product_path %></p>

    <% @admin.products.each do |product| %>
      <li><%= image_tag product.img.url(:thumb)%>
      <%= link_to product.title, product_path(product.id) %> | <%= link_to t("edit_product"), edit_product_path(product.id) %></li> 
    <% end %>
  </div>
</div>